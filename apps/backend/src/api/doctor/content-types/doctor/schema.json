{
  "kind": "collectionType",
  "collectionName": "doctors",
  "info": {
    "singularName": "doctor",
    "pluralName": "doctors",
    "displayName": "Doctor",
    "description": "Doctor information"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "specialization": {
      "type": "string",
      "required": true
    },
    "qualification": {
      "type": "string"
    },
    "experience": {
      "type": "integer"
    },
    "consultationFee": {
      "type": "decimal"
    },
    "schedule": {
      "type": "json"
    },
    "appointments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::appointment.appointment",
      "mappedBy": "doctor"
    }
  }
}
